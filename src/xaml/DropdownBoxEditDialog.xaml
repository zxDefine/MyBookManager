<ContentDialog
    x:Class="MyBookManager.DropdownBoxEditDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyBookManager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Uid="ViewBook_Edit_Dialog"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <Grid>
        <RelativePanel Padding="10,10,10,10">
            <TextBlock x:Name="labelTitle" FontSize="13"/>
            <ComboBox x:Name="inputValue" RelativePanel.Below="labelTitle" Margin="0,4,0,0" Width="285" Height="32" SelectionChanged="inputValue_SelectionChanged"/>
        </RelativePanel>
    </Grid>
</ContentDialog>
